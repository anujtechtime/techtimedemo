  <record id="view_invoice_data_wizard_data" model="ir.ui.view">
   <field name="name">invoice.data.wizard.view</field>
   <field name="model">invoice.data.wizard</field>
   <field name="type">form</field>
   <field name="arch" type="xml">
       <form>
        <label for="partner_id" name="partner_id" />
           <field name="partner_id" widget="many2many_tags"/>




        <label for="date_start" name="date_start" />
           <field name="date_start"/>

        <label for="date_end" name="date_end"/>   
            <field name="date_end"/>

        <label for="period" name="period" />
           <field name="period"/>

        <label for="average_exchange_rate" name="average_exchange_rate" />
           <field name="average_exchange_rate"/> 
                 
         <footer>
             <button name="report_for_analytic_acount" string="Print" type="object" class="oe_highlight"/>
             <button string="Cancel" class="btn btn-default" special="cancel"/>
         </footer>
       </form>
   </field>
</record>



        <record id="action_invoice_data_wizardwiz" model="ir.actions.act_window">
            <field name="name">Invoice report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">invoice.data.wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="view_id" ref="sama_invoice.view_invoice_data_wizard_data"/>
            <field name="target">new</field>
            
        </record>


        <menuitem action="action_invoice_data_wizardwiz" id="manu_action_invoice_balance_wiz" parent="contacts.res_partner_menu_contacts" sequence="15" name="Invoice Report"/>



  <record model="ir.ui.view" id="view_any_name_account_move_form_seq_sale">
    <field name="name">sale.order.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <!-- <field name="type">form</field> -->
    <field name="arch" type="xml">
      <xpath expr="//field[@name='partner_shipping_id']" position="after">
        <field name="section"/>
        <field name="sub_section"/>
        <field name="sequence"/>
        <field name="period"/>
      </xpath>
    </field>
  </record>

  <record model="ir.ui.view" id="view_any_name_account_move_form_seq">
    <field name="name">account.move.form</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <!-- <field name="type">form</field> -->
    <field name="arch" type="xml">
      <xpath expr="//field[@name='ref']" position="after">
        <field name="sequence"/>
      </xpath>
    </field>
  </record>

  <record id="view_move_tree_inherit_sale_price" model="ir.ui.view">
    <field name="name">stock.move.tree.sale.price</field>
    <field name="model">stock.move</field>
    <field name="inherit_id" ref="stock.view_move_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='product_uom_qty']" position="after">
        <field name="sale_price_unit"/>
      </xpath>
    </field>
  </record>



